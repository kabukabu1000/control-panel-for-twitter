{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "default_locale": "ja",
  "version": "3.16.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "options.html"
  },

  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [   
    "https://twitter.com/*",
    "https://mobile.twitter.com/*"
      ],
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
  {
    "resources": [
      "script.js"
    ],
    "matches": [
          "https://twitter.com/*",
          "https://mobile.twitter.com/*"      ]  
     
  }
  ],

  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://mobile.twitter.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
